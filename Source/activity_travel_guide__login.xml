<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" tools:context=".TravelGuide_LoginActivity" android:id="@+id/activityContainer"
    android:background="@drawable/travel_guide">
    >

    <!-- Login progress -->
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />

    <ScrollView android:id="@+id/login_form" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical" android:id="@+id/user_Login"
            android:weightSum="1"
            android:visibility="visible"
            android:minHeight="480dp"
            android:minWidth="300dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/user_Login_Options">

                <com.facebook.login.widget.LoginButton
            android:id="@+id/fb_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
          android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"
          android:layout_weight="0.03" />

                <com.google.android.gms.common.SignInButton android:id="@+id/plus_sign_in_button"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/plus_UserHome"
                android:layout_weight="0.96"
                android:visibility="visible"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/plus_profileInfo"
                    android:weightSum="1"
                    android:visibility="visible"
                    android:background="#b5b3f6fb">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:id="@+id/plus_User_Pic"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/plus_Username"
                        android:visibility="visible"
                        android:textAlignment="center" />

                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tbl_userOptions"
                    android:layout_marginTop="30dp"
                    android:visibility="visible"
                    android:layout_weight="0.80">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:id="@+id/row_firstOptions"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:id="@+id/btn_fristOption"
                            android:background="@drawable/currency_conversion"
                            android:maxWidth="50dp" />

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="80dp"
                            android:id="@+id/btn_secondOption"
                            android:background="@drawable/weather_forecast"
                            android:layout_marginLeft="60dp" />

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:id="@+id/btn_thirdOption"
                            android:layout_marginLeft="50dp"
                            android:background="@drawable/translate"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:id="@+id/row_secondOptions"
                        android:layout_marginTop="30dp"
                        android:minHeight="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="80dp"
                            android:id="@+id/btn_fourthOption"
                            android:background="@drawable/points_of_interest"/>

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="80dp"
                            android:id="@+id/btn_fifthOption"
                            android:layout_marginLeft="60dp"
                            android:background="@drawable/checklist"/>

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="80dp"
                            android:id="@+id/btn_sixthOption"
                            android:layout_marginLeft="50dp"
                            android:background="@drawable/accomodation"/>
                    </TableRow>
                </TableLayout>

                <LinearLayout android:id="@+id/plus_sign_out_buttons"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:visibility="visible" android:weightSum="2">

                    <Button android:id="@+id/plus_sign_out_button" style="?android:textAppearanceSmall"
                        android:layout_width="352dp" android:layout_height="59dp"
                        android:text="Sign out"
                        android:visibility="visible" />

                </LinearLayout>
            </LinearLayout>

            <!--      <LinearLayout android:id="@+id/email_login_form" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">

                <AutoCompleteTextView android:id="@+id/email" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="@string/prompt_email"
                    android:inputType="textEmailAddress" android:maxLines="1"
                    android:singleLine="true" />

                <EditText android:id="@+id/password" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:hint="@string/prompt_password"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified" android:inputType="textPassword"
                    android:maxLines="1" android:singleLine="true" />

                <Button android:id="@+id/email_sign_in_button" style="?android:textAppearanceSmall"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" android:text="@string/action_sign_in"
                    android:textStyle="bold" />

            </LinearLayout>-->
        </LinearLayout>
    </ScrollView>

</LinearLayout>

